/* pages/hole/index.wxss */
.box{
	height: 2000rpx;
	background-color:lightskyblue ;
}
.content-box {
  background: #fff;
}

.head {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
}

.head-line {
  width: 8rpx;
  height: 42rpx;
  transform: rotate(30deg);
  border-radius: 5rpx;
}

.line-left {
  background: #3584a7;
}

.line-right {
  background: #30d2be;
}

.head-title {
  font-size: 36rpx;
  font-weight: bold;
  background-image: linear-gradient(-225deg, #473b7b 0%, #3584a7 51%, #30d2be 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  margin: 0 20rpx;
}

.box {
  display: flex;
  flex-direction: column;
  padding: 30rpx 30rpx;
}

.box-item {
  display: flex;
  flex-direction: row;
	margin-bottom: 30rpx;
}

.item-poster {
  width: 335rpx;
  height: 190rpx;
  border-radius: 190rpx;
}

.box-right {
  width: 325rpx;
  margin-left: 30rpx;
}

.item-title {
  text-align: justify;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: bold;
}

.item-tip {
  margin-top: 15rpx;
  color: #999;
}



/* 宫格导航 */
.qnn-nav {
	display:flex;
	flex-wrap: wrap;
	border-left: 10rpx solid #efefef;
	border-top: 10rpx solid #efefef;
}

.qnn-nav-item {
	width: 50%;
	height:200rpx;
	text-align: center;
	color: #aaa;
	border-right: 10rpx solid #efefef;
	border-bottom: 10rpx solid #efefef;
	box-sizing: border-box;

}

.qnn-nav-icon {
	width:100%;
	height: 100%;
	border-right: 10rpx solid #efefef;
	border-bottom: 10rpx solid #efefef;

}
.qnn-nav-icon image{
justify-content: space-around;
}
/* 猜你喜欢 */
.qnn-like {
	width: 90%;
	margin: 0rpx auto;
	margin-top: 40rpx;
}

.qnn-like-item-box {
	width: 100%;
	display: flex;
	justify-content: space-between;
	overflow: hidden;
}

.qnn-like-item {
	width: 210rpx;
	height: 310rpx;
	border-radius: 15rpx;
}

.qnn-like-img {
	width: 210rpx;
	height: 210rpx;
	border-radius: 15rpx;
	position: relative;
}

.qnn-like-item-icon {
	width: 100%;
	height: 100%;
	border-radius: 15rpx;
}

.qnn-like-text {
	font-size: 28rpx;
	color: #333;
	margin-top: 10rpx;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	/*行数n*/
	-webkit-box-orient: vertical;
	overflow: hidden;
	text-overflow: ellipsis;
}

.qnn-like-cover {
	width: 190rpx;
	height: 40rpx;
	/* 透明背景层 */
	background-image: linear-gradient(rgba(0, 0, 0, 0.01), rgba(0, 0, 0, 1));
	/* opacity: 0.3; */
	position: absolute;
	bottom: 0rpx;
	color: #fff;
	font-size: 25rpx;
	padding: 5rpx 10rpx;
	border-bottom-left-radius: 15rpx;
	border-bottom-right-radius: 15rpx;
}

.qnn-data-notip {
	width: 100%;
	height: 300rpx;
	padding-top: 150rpx;
}

.qnn-tip {
	width: auto;
	height: 100rpx;
	text-align: center;
	margin: 0rpx auto;
	color: red;
	font-weight: 800;
}